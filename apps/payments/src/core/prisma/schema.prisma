generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("PAYMENTS_POSTGRES_URL")
}

model Transaction {
  id        Int      @id @default(autoincrement())

  amount Float 
  currency String
  
  stripeSubscriptionId String? 
	stripeSessionId String? 
  status TransactionStatus @default(PENDING)

	paypalSessionId String?
	paypalPlanId String?
	
  createdAt DateTime @default(now())
	expiresAt DateTime?
	expiresLinkAt DateTime?

	provider TransactionProvider

  userId String

  @@map("transactions")
}

model Subscription {
	id Int @id @default(autoincrement())
	userId String
	planId Int
	createdAt DateTime
	expiresAt DateTime
  stripeSubscriptionId String? 

	paypalSubscriptionId String?

	isAutoRenewal Boolean @default(true)

	plan Plan @relation(fields: [planId], references: [id])

	deletedAt DateTime?

	@@map("subscriptions")
}

model Plan {
	id Int @id @default(autoincrement())
	title String
	description String
	stripeProductId String
	stripePlanId String
	price Float
	currency String
	interval String
	paypalProductId String
	paypalPlanId String

	createdAt DateTime @default(now())

	Subscription Subscription[]

	@@map("plans")
}

enum TransactionStatus {
  PENDING
  SUCCESS
  FAILED
  EXPIRED

  @@map("transaction_statuses")
}

enum TransactionProvider {
  STRIPE
  PAYPAL

  @@map("transaction_providers")
}