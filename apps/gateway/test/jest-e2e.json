{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": ["ts-jest", { "tsconfig": "<rootDir>/tsconfig.app.json" }]
  },
  "moduleNameMapper": {
    "^@gateway/(.*)$": "<rootDir>/src/$1",
    "^@libs/constants/(.*)$": "<rootDir>/../../libs/constants/src/$1",
    "^@libs/utils/(.*)$": "<rootDir>/../../libs/utils/src/$1",
    "^@libs/contracts/(.*)$": "<rootDir>/../../libs/contracts/src/$1",
    "^@libs/exeption/(.*)$": "<rootDir>/../../libs/exeption/src/$1",
    "^@libs/redis/(.*)$": "<rootDir>/../../libs/redis/src/$1",
    "^@libs/rabbit/(.*)$": "<rootDir>/../../libs/rabbit/src/$1",
    "^@auth/(.*)$": "<rootDir>/../auth/src/$1",
    "^@main/(.*)$": "<rootDir>/../main/src/$1"
  },
  "moduleDirectories": ["node_modules", "<rootDir>/../auth/src", "<rootDir>/../main/src", "<rootDir>/src"]
}
