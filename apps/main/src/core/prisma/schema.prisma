generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("MAIN_POSTGRES_URL")
}


// Модель подписки - таблица в БД
model Post {
  id String @id  @default(uuid())
  userId String
  description String
  createdAt DateTime @default(now())
	updatedAt DateTime @updatedAt
  deletedAt DateTime? 

	@@unique([createdAt, id], name: "createdAt_id") // составной уникальный индекс для реализации пагинации с курсором
  @@map("posts")
}