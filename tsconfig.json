{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "composite": true,
    "paths": {
      "@libs/utils/*": ["libs/utils/src/*"],
      "@libs/constants/*": ["libs/constants/src/*"],
      "@libs/contracts/*": ["libs/contracts/src/*"],
      "@libs/exeption/*": ["libs/exeption/src/*"]
    }
  },
  "references": [
    {
      "path": "./apps/auth/tsconfig.app.json"
    },
    {
      "path": "./apps/main/tsconfig.app.json"
    },
    {
      "path": "./apps/files/tsconfig.app.json"
    },
    {
      "path": "./apps/payments/tsconfig.app.json"
    },
    {
      "path": "./apps/gateway/tsconfig.app.json"
    },
    {
      "path": "./libs/constants/tsconfig.lib.json"
    },
    {
      "path": "./libs/utils/tsconfig.lib.json"
    },
    {
      "path": "./libs/contracts/tsconfig.lib.json"
    },
    {
      "path": "./libs/exeption/tsconfig.lib.json"
    }
  ]
} 