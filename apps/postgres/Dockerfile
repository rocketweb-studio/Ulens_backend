FROM postgres:17-alpine

ARG port
ARG service
ARG POSTGRES_USER
ARG POSTGRES_PASSWORD
ARG POSTGRES_DB

ENV SERVICE=$service
ENV PORT=$port
ENV POSTGRES_USER=$POSTGRES_USER
ENV POSTGRES_PASSWORD=$POSTGRES_PASSWORD
ENV POSTGRES_DB=$POSTGRES_DB

EXPOSE ${PORT}

CMD ["sh", "-c", "postgres -c listen_addresses='*' -c port=${PORT:-5432}"]
