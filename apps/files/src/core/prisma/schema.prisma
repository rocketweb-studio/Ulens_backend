generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("FILES_POSTGRES_URL")
}

model Avatar {
  id String @id @default(uuid())
	parentId String
  url String
  width Int
  height Int
  fileSize Int
	size Size
  createdAt DateTime @default(now())
	deletedAt DateTime?

  @@map("avatars")  
}
model Post {
  id String @id @default(uuid())
  parentId String
  url String
  width Int
  height Int
  fileSize Int
  size Size
  createdAt DateTime @default(now())
	deletedAt DateTime?

  @@map("posts")  
}


model MessageAttachment {
  id String @id @default(uuid())
  messageId Int?
  roomId Int
  url String
	width Int?
  height Int?
  fileSize Int?
  size Size?
  type MessageMediaType
  createdAt DateTime @default(now())
  deletedAt DateTime?

  @@map("message_attachments")
}

enum MessageMediaType {
  IMAGE
  AUDIO
}

