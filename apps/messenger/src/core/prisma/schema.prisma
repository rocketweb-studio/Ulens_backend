generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("MESSENGER_POSTGRES_URL")
}

model Room {
  id Int @id @default(autoincrement())
	userId1 String
	userId2 String
	createdAt DateTime @default(now())
	updatedAt DateTime @updatedAt
	deletedAt DateTime?

	@@unique([userId1, userId2], name: "unique_room_users")
	messages Message[]

	@@map("rooms")
}

model Message {
  id Int @id @default(autoincrement())
  roomId Int
  userId String
  content String
	mediaUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

	@@index([roomId])
	room Room? @relation(fields: [roomId], references: [id])


	@@map("messages")
}

enum InboxStatus {
  RECEIVED
  PROCESSED
  FAILED
}

model InboxEvent {
  id           String      @id            // messageId из брокера / eventId из webhooks
  type         String
  source       String                      // "payments-service" | "stripe" и т.п.
  payload      Json
  status       InboxStatus @default(RECEIVED)
  error        String?
  receivedAt   DateTime    @default(now())
  processedAt  DateTime?

  @@map("inbox_events")
  @@index([status])
  @@index([source, type])
}

model OutboxEvent {
  id             String       @id @default(uuid())
  aggregateType  String
  eventType      String
  payload        Json
  headers        Json?
  status         OutboxStatus @default(PENDING)
  attempts       Int          @default(0)
  nextAttemptAt  DateTime?
  topic          String?
  createdAt      DateTime     @default(now())
	scheduledAt    DateTime?
  publishedAt    DateTime?

  @@map("outbox_events")
}

enum OutboxStatus {
  PENDING
  PUBLISHED
  FAILED
}