generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("NOTIFICATIONS_POSTGRES_URL")
}

enum InboxStatus {
  RECEIVED
  PROCESSED
  FAILED
}

model InboxEvent {
  id           String      @id            // messageId из брокера / eventId из webhooks
  type         String
  source       String                      // "payments-service" | "stripe" и т.п.
  payload      Json
  status       InboxStatus @default(RECEIVED)
  error        String?
  receivedAt   DateTime    @default(now())
  processedAt  DateTime?

  @@map("inbox_events")
  @@index([status])
  @@index([source, type])
}
