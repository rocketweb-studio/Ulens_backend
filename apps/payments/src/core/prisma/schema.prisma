generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("PAYMENTS_POSTGRES_URL")
}

model Transaction {
  id String @id @default(uuid())

  amount Float 
  currency String
  
  stripeSubscriptionId String? 
  status TransactionStatus @default(PENDING)

  createdAt DateTime @default(now())
	expiresAt DateTime?

	provider TransactionProvider

  userId String

  @@map("transactions")
}

model Subscription {
	id String @id @default(uuid())
	userId String
	planId String
	createdAt DateTime
	expiresAt DateTime
  stripeSubscriptionId String? 

	isAutoRenewal Boolean @default(true)

	plan Plan @relation(fields: [planId], references: [id])

	@@map("subscriptions")
}

model Plan {
	id String @id @default(uuid())
	title String
	description String
	stripeProductId String
	stripePlanId String
	price Float
	currency String
	interval String

	createdAt DateTime @default(now())

	Subscription Subscription[]

	@@map("plans")
}

enum TransactionStatus {
  PENDING
  SUCCESS
  FAILED
  EXPIRED

  @@map("transaction_statuses")
}

enum TransactionProvider {
  STRIPE
  PAYPAL

  @@map("transaction_providers")
}